# Arquivo .gitmodules para gerenciar submódulos do Git
# Este arquivo define submódulos externos utilizados no projeto PetCareAi

# Submódulo para documentação compartilhada
[submodule "docs/shared"]
	path = docs/shared
	url = https://github.com/petcare-ai/shared-docs.git
	branch = main
	update = rebase

# Submódulo para algoritmos de ML compartilhados
[submodule "algorithms/ml-commons"]
	path = algorithms/ml-commons
	url = https://github.com/petcare-ai/ml-algorithms.git
	branch = stable
	update = merge

# Submódulo para componentes de UI reutilizáveis
[submodule "components/ui-library"]
	path = components/ui-library
	url = https://github.com/petcare-ai/ui-components.git
	branch = main
	update = rebase

# Submódulo para testes de integração compartilhados
[submodule "tests/integration-suite"]
	path = tests/integration-suite
	url = https://github.com/petcare-ai/integration-tests.git
	branch = develop
	update = merge

# Submódulo para configurações de deployment
[submodule "deploy/configs"]
	path = deploy/configs
	url = https://github.com/petcare-ai/deployment-configs.git
	branch = production
	update = merge

# Submódulo para datasets de exemplo
[submodule "data/sample-datasets"]
	path = data/sample-datasets
	url = https://github.com/petcare-ai/sample-data.git
	branch = main
	update = rebase

# Submódulo para scripts utilitários compartilhados
[submodule "scripts/utils"]
	path = scripts/utils
	url = https://github.com/petcare-ai/utility-scripts.git
	branch = main
	update = rebase

# Submódulo para modelos pré-treinados
[submodule "models/pretrained"]
	path = models/pretrained
	url = https://github.com/petcare-ai/pretrained-models.git
	branch = stable
	update = merge

# Submódulo para temas e estilos
[submodule "assets/themes"]
	path = assets/themes
	url = https://github.com/petcare-ai/ui-themes.git
	branch = main
	update = rebase

# Submódulo para configurações de CI/CD
[submodule ".github/workflows-shared"]
	path = .github/workflows-shared
	url = https://github.com/petcare-ai/github-workflows.git
	branch = main
	update = rebase
